  <div class="container">
    <h1><strong>Ingrese un Producto</strong> </h1>
    <form action="/products" method="post">
      <div class="mb-3">
        <label for="name" class="form-label">Name: </label>
        <input type="text" class="form-control" id="name" name={{name}} aria-describedby="name">
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price: </label>
        <input type="number" class="form-control" id="price" name={{price}} aria-describedby="price">
      </div>
      <div class="mb-3">
        <label for="URL" class="form-label">Foto URL: </label>
        <input type="text" class="form-control" id="URL" name={{URL}} aria-describedby="URL">
      </div>
      <button type="submit" class="btn btn-primary" style="background-color: #0e1;" >Submit</button>
    </form>
  </div>
  